# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "battery all"
order += "tztime local"
order += "memory"
order += "cpu_usage"
order += "volume master"

# wireless _first_ {
#         format_up = "W: (%quality at %essid) %ip"
#         format_down = "W: down"
# }

# ethernet _first_ {
#        if you use %speed, i3status requires root privileges
#        format_up = "E: %ip (%speed)"
#        format_down = "E: down"
#}

battery all {
        format = "%status %percentage"
	low_threshold= 25
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

# load {
#         format = "%1min"
# }
# 
# disk "/" {
#         format = "%avail"
# }
# 
volume master {
    device = "default"
    format = "♪: %volume"
    format_muted = "♪: 0"
    mixer = "Master"
    mixer_idx = 0
}

# memory {
#        #memory_used_method: memavailable 
# 	format = "Mem:"
# }

cpu_usage {
	format = "CPU: %usage"
}

